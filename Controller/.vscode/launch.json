{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Webots Controller",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "WEBOTS_HOME": "/snap/webots/current/usr/share/webots",
                "LD_LIBRARY_PATH": "/snap/webots/current/usr/share/webots/lib/controller",
                "PYTHONPATH": "/snap/webots/current/usr/share/webots/lib/controller/python",
            }
        }
    ]
}
